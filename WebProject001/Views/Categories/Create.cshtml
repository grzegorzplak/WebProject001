@model WebProject001.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<h1 class="text-info">Create Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-2">
                <label class="input-group-text" asp-for="CategoryName"></label>
                <input type="text" class="form-control" asp-for="CategoryName">
            </div>
            <div class="input-group mb-2">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">
                    <i class="bi bi-folder-plus"></i>&nbsp;&nbsp;Create Category
                </button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-ban"></i>&nbsp;&nbsp;Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
