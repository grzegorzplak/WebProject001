@model WebProject001.Models.Category

@{
    ViewData["Title"] = "Category's Details";
}

<h1 class="text-info">Category's Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="input-group mb-3">
            <label class="input-group-text" asp-for="CategoryName"></label>
            <input disabled type="text" class="form-control" asp-for="CategoryName">
        </div>
        <div class="form-group">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-dark">
                <i class="bi bi-pencil"></i>&nbsp;&nbsp;Edit Category
            </a>&nbsp;&nbsp;&nbsp;
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-ban"></i>&nbsp;&nbsp;Back to List
            </a>
        </div>
    </div>
</div>