@model WebProject001.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h1 class="text-info">Edit Category</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="CategoryName"></label>
                <input type="text" class="form-control" asp-for="CategoryName">
            </div>
            <div class="input-group mb-3">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-warning text-dark" type="submit">
                    <i class="bi bi-pen"></i>&nbsp;&nbsp;Update Category
                </button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-ban"></i>&nbsp;&nbsp;Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
