@model IEnumerable<WebProject001.ViewModels.ExpenditureByShop>

<h1 class="text-info"> Expenditures by Shop filter by Year & Month </h1>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Stats" asp-action="ExpendituresByShopFilterByYearMonth">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Choose year & month: </span>
                </div>
                <select name="yearMonth" class="form-select" asp-items="ViewBag.YearMonth"></select>
                <input type="submit" value="Show" class="btn btn-info text-secondary" />
            </div>
            <div class="form-group text-muted">
                Data are filtered by @ViewBag.Criteria
            </div>
        </form>
    </div>
    <div>
        @if(Model != null)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Shop Name</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.ShopName</td>
                        <td>@String.Format("{0:n2}", item.Total)</td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="row">
                There is no data 
            </div>
        }
    </div>
</div>
