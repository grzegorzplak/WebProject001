<h1 class="text-info">Expenditures By Year & Month</h1>

<div class="col-12">
    <div>
        <canvas id="myChart" style="height: 450px;"></canvas>
    </div>

    <div class="justify-content-center text-center chart-spinner" style="display:none">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $(".chart-spinner").show();
        $.ajax({
            type: "GET",
            url: "/Stats/GetDataForExpendituresByYearMonthChart",
            data: "",
            contextType: "application/json; charset=utf-8",
            dataType: "json",
            success: OnSuccessResult,
            error: OnError
        });

        function OnSuccessResult(data) {
            var _data = data;
            var _chartLabels = _data[0];
            var _chartData = _data[1];
            new Chart("myChart",
                {
                    type: "bar",
                    data: {
                        labels: _chartLabels,
                        datasets: [{
                            label: 'Expenditure',
                            borderColor: "rgb(13, 202, 240)",
                            backgroundColor: "rgba(13, 202, 240, 0.7)",
                            data: _chartData
                        }]
                    },
                    options: {
                        maintainAspectRatio: false,
                    }
                }
            );
            $(".chart-spinner").hide();
        }

        function OnError(err) {

        }
    });
</script>



