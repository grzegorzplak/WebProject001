@model WebProject001.Models.Shop

@{
    ViewData["Title"] = "Create Shop";
}

<h1 class="text-info">Create Shop</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-group mb-2">
                <label class="input-group-text" asp-for="ShopName" style="width: 120px;"></label>
                <input type="text" class="form-control" asp-for="ShopName">
            </div>
            <div class="input-group mb-2">
                <span asp-validation-for="ShopName" class="text-danger"></span>
            </div>
            
            <div class="input-group mb-2">
                <label class="input-group-text" asp-for="AddressLine" style="width: 120px;"></label>
                <input type="text" class="form-control" asp-for="AddressLine">
            </div>
            <div class="input-group mb-2">
                <span asp-validation-for="AddressLine" class="text-danger"></span>
            </div>

            <div class="input-group mb-2">
                <label class="input-group-text" asp-for="City" style="width: 120px;"></label>
                <input type="text" class="form-control" asp-for="City">
            </div>
            <div class="input-group mb-2">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">
                    <i class="bi bi-folder-plus"></i>&nbsp;&nbsp;Create Shop
                </button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-ban"></i>&nbsp;&nbsp;Back to List
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
