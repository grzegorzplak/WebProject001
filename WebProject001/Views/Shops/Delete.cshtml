@model WebProject001.Models.Shop

@{
    ViewData["Title"] = "Delete Shop";
}

<h1 class="text-info">Delete Shop</h1>

<hr />
<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="ShopName" style="width: 100px;"></label>
                <input disabled type="text" class="form-control" asp-for="ShopName">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="AddressLine" style="width: 100px;"></label>
                <input disabled type="text" class="form-control" asp-for="AddressLine">
            </div>
            <div class="input-group mb-3">
                <label class="input-group-text" asp-for="City" style="width: 100px;"></label>
                <input disabled type="text" class="form-control" asp-for="City">
            </div>
            <div class="form-group">
                <button class="btn btn-danger text-warning" type="submit">
                    <i class="bi bi-trash3"></i>&nbsp;&nbsp;Delete Shop
                </button>&nbsp;&nbsp;&nbsp;
                <a class="btn btn-secondary" asp-action="Index">
                    <i class="bi bi-ban"></i>&nbsp;&nbsp;Back to List
                </a>
            </div>
        </form>
    </div>
</div>
